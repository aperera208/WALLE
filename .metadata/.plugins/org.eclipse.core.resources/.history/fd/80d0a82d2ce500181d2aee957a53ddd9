#include "BSP.h"

/*
 * Delay x ms
 */
static void Delay(unsigned long interval)
{
    while(interval > 0)
    {
        __delay_cycles(48000);
        interval--;
    }
}

packet_t cont_state;
char x_adc[4];
char y_adc[4];
char butt[4];

/**
 * main.c
 */
void main(void)
{
    WDT_A->CTL = WDT_A_CTL_PW | WDT_A_CTL_HOLD;     // stop watchdog timer

    ClockSys_SetMaxFreq();

    uint32_t CLK = ClockSys_GetSysFreq();
    uint32_t SMCLK = CS_getSMCLK();
    uint32_t ACLK = CS_getACLK();
    uint32_t DCO = CS_getDCOFrequency();

    XBEE_UART_INIT();
    init_controller();

    bool success;

    while(1)
    {
//        cont_state = get_joystick_buttons();
//        success = XBEE_SEND_CONTROLLER_PACKET(cont_state);

        cont_state = get_controller_state();
        sprintf(x_adc, "%04i", cont_state.xadc);
        sprintf(y_adc, "%04i", cont_state.yadc);
        sprintf(butt, "%04d", cont_state.buttons);
        LCD_DrawRectangle(0, 100, 0, 100, LCD_BLACK);
        LCD_Text(MIN_SCREEN_X + 5, MIN_SCREEN_Y + 5, (uint8_t*)x_adc, LCD_WHITE);
        LCD_Text(MIN_SCREEN_X + 5, MIN_SCREEN_Y + 15, (uint8_t*)y_adc, LCD_WHITE);
        LCD_Text(MIN_SCREEN_X + 5, MIN_SCREEN_Y + 25, (uint8_t*)butt, LCD_WHITE);


        //success = XBEE_SEND_CONTROLLER_STATE(cont_state);

        //Delay(100);
    }
}




